@model BlogPost

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section css {
    <link href="~/css/post.css" rel="stylesheet" />
}

<h1>Editar</h1>

<h4>BlogPost</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit">
            <input type="hidden" asp-for="Image" />

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PostId" />
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ShortDescription" class="control-label"></label>
                <input asp-for="ShortDescription" class="form-control" />
                <span asp-validation-for="ShortDescription" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="PrevDescription" class="control-label"></label>
                <textarea asp-for="PrevDescription" class="form-control" rows="5"></textarea>
                <span asp-validation-for="PrevDescription" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="ImagemUpload" class="control-label"></label>
                <input type="file" id="ImagemUpload" class="form-control" accept="image/*" />
                <span asp-validation-for="Image" class="text-danger">
                </span>
            </div>

            <div class="col-3">
                <div class="form-group">
                    <img src="@(Model.Image)" alt="Foto" id="fotoTemp" />
                </div>
            </div>


            <div class="form-group">
                <label asp-for="Date" class="control-label"></label>
                <input asp-for="Date" class="form-control" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>

            <div class="form-group">
                <button class="btn btn-primary" type="submit">Salvar</button>
                <a asp-action="Index" class="btn btn-success">Voltar</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/js/post.js"></script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
